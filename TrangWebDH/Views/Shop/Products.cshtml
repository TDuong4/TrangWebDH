@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Sản phẩm của tôi";
}

<h2 class="text-center mb-4">Sản phẩm của tôi</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="AddProduct" method="post" enctype="multipart/form-data" class="mb-3">
    <!-- ... other fields ... -->
    <input type="file" name="imageFile[]" multiple class="form-control" accept="image/*" />
    <!-- ... -->
    <button type="submit" class="btn btn-success">Thêm sản phẩm</button>
</form>

@if (Model.Any())
{
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@p.ImagePath" class="card-img-top" style="height:200px; object-fit:cover;"
                         alt="@p.Name" onerror="this.src='/images/no-image.png'">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text text-muted small">@p.Description</p>
                        <p class="card-text text-danger fw-bold">@string.Format("{0:N0}đ", p.Price)</p>
                        <div class="mt-auto">
                            <a asp-action="EditProduct" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="DeleteProduct" asp-route-id="@p.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Xóa?')">Xóa</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">Chưa có sản phẩm.</p>
}