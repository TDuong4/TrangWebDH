@model IEnumerable<TrangWebDH.Models.Product>

@{
    ViewData["Title"] = "Tồn kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">📦 Quản lý tồn kho</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Chưa có sản phẩm nào trong kho.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>Ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng tồn</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(product.Images.FirstOrDefault()?.ImagePath ?? "/images/placeholder.jpg")"
                                     alt="@product.Name"
                                     style="width: 60px; height: 60px; object-fit: cover;"
                                     class="rounded">
                            </td>
                            <td>
                                <strong>@product.Name</strong>
                            </td>
                            <td class="text-danger fw-bold">
                                @string.Format("{0:N0}đ", product.Price)
                            </td>
                            <td class="text-center">
                                @if (product.Quantity.HasValue)
                                {
                                    <span class="badge @(product.Quantity > 10 ? "bg-success" : product.Quantity > 0 ? "bg-warning" : "bg-danger")">
                                        @product.Quantity
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">Không giới hạn</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (!product.Quantity.HasValue || product.Quantity > 10)
                                {
                                    <span class="badge bg-success">Còn hàng</span>
                                }
                                else if (product.Quantity > 0)
                                {
                                    <span class="badge bg-warning">Sắp hết</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="text-center mt-4">
        <a asp-action="AddProduct" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm sản phẩm mới
        </a>
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại Dashboard
        </a>
    </div>
</div>