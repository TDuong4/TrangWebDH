@model Shop
@{
    ViewData["Title"] = "Dashboard Shop";
}

<div class="container">
    <h2 class="mb-4">Dashboard Shop: @Model.Name</h2>

    <!-- THÔNG TIN SHOP -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thông tin Shop</h5>
        </div>
        <div class="card-body">
            <p><strong>Tên shop:</strong> @Model.Name</p>
            <p><strong>Địa chỉ:</strong> @Model.Address</p>
            <p><strong>SĐT:</strong> @Model.Phone</p>
            <a asp-action="EditInfo" class="btn btn-outline-primary">Sửa thông tin</a>
        </div>
    </div>

    <!-- THỐNG KÊ -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <h3 class="text-primary">@ViewBag.OrdersCount</h3>
                    <p class="text-muted">Đơn hàng</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-success">
                <div class="card-body">
                    <h3 class="text-success">@string.Format("{0:N0}", ViewBag.Revenue) ₫</h3>
                    <p class="text-muted">Doanh thu</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-warning">
                <div class="card-body">
                    <h3 class="text-warning">@ViewBag.Stock</h3>
                    <p class="text-muted">Tồn kho</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-info">
                <div class="card-body">
                    <h3 class="text-info">@Model.Products.Count</h3>
                    <p class="text-muted">Sản phẩm</p>
                </div>
            </div>
        </div>
    </div>

    <!-- MENU CHÍNH -->
    <div class="row">
        <div class="col-md-4">
            <a asp-action="AddProduct" class="btn btn-primary btn-lg w-100 mb-2">Thêm sản phẩm</a>
            <a asp-action="Products" class="btn btn-outline-primary btn-lg w-100 mb-2">Quản lý sản phẩm</a>
            <a asp-action="Chat" class="btn btn-outline-success btn-lg w-100 mb-2">Xem tin nhắn khách</a>
            <a asp-action="Report" class="btn btn-outline-info btn-lg w-100 mb-2">Báo cáo doanh thu</a>
            <a asp-action="Inventory" class="btn btn-outline-warning btn-lg w-100">Kiểm tra tồn kho</a>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Sản phẩm nổi bật</h5>
                </div>
                <div class="card-body">
                    @if (Model.Products.Any())
                    {
                        <div class="row">
                            @foreach (var p in Model.Products.Take(4))
                            {
                                <div class="col-md-3 mb-3">
                                    <div class="card h-100">
                                        <img src="@p.Images.FirstOrDefault()?.ImagePath" class="card-img-top" alt="@p.Name" />
                                        <div class="card-body">
                                            <h6 class="card-title">@p.Name</h6>
                                            <p class="text-danger">@p.Price ₫</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có sản phẩm nào. <a asp-action="AddProduct">Thêm ngay</a></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>