@using Microsoft.AspNetCore.Identity
@using TrangWebDH.Models
@using TrangWebDH.Data
@using Microsoft.EntityFrameworkCore
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IServiceProvider ServiceProvider

@if (SignInManager.IsSignedIn(User))
{
    <div class="btn-group">
        <button type="button" class="btn btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            Xin chào, @User.Identity?.Name!
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
            @{
                bool hasShop = false;
                var user = await UserManager.GetUserAsync(User);
                if (user != null)
                {
                    using var scope = ServiceProvider.CreateScope();
                    var db = scope.ServiceProvider.GetRequiredService<ApplicationDbContext>();
                    hasShop = await db.Shops.AnyAsync(s => s.UserId == user.Id);
                }
            }

            @if (hasShop)
            {
                <li>
                    <a class="dropdown-item" asp-controller="Shop" asp-action="Dashboard">
                        <i class="bi bi-shop me-2"></i>Shop của tôi
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
            }

            <li>
                <form asp-area="Identity" asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                      method="post" class="d-inline">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                    </button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Login">
        <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập
    </a>
}