@page
@model TrangWebDH.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 fw-bold text-primary">@ViewData["Title"]</h2>
                    <form method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Input.Email" class="form-control form-control-lg rounded-pill" placeholder="you@example.com" required />
                            <div class="invalid-feedback">Vui lòng nhập email.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-semibold">Mật khẩu</label>
                            <input asp-for="Input.Password" type="password" class="form-control form-control-lg rounded-pill" placeholder="Nhập mật khẩu" required />
                            <div class="invalid-feedback">Vui lòng nhập mật khẩu.</div>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">Nhớ mật khẩu?</label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill fw-bold">
                            Đăng nhập
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <p class="mb-0">
                            Chưa có tài khoản?
                            <a asp-page="./Register" class="text-decoration-none fw-semibold text-primary">Đăng ký ngay</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}